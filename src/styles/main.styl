* {
    box-sizing: border-box
}
body {
    font-family: Arial;
}
h1, h2, h3, h4, h5 {
    font-family: "Rubik";
}
.bug-table
    display table
    margin 20px auto
    width 100%
    max-width 1700px
    border-collapse: collapse
    border-spacing: 0
.bug-table-item
    display table-row
    &:not(:first-child)
        border-top: 1px solid #e5e5e5
    &__cell
        display table-cell
        text-align left
        vertical-align bottom
        padding: 12px 8px
    &__description
        max-width 400px
    &--header
        & ^[0]__cell
            text-transform: uppercase
            color #666
            font-family: "Rubik"
    &__image-list-item
        cursor pointer    
        & > img
            max-width 200px
    &__image-full
        img
            max-width 100%
            max-height 100%
                   